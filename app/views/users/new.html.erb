<h1>Create New User and Installments</h1>

<%= form_with(model: @user, url: users_path, method: :post, local: true) do |form| %>
  <div>
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :total_amount, "Total Amount" %>
    <%= number_field_tag :total_amount, nil, required: true %>
  </div>

  <div>
    <%= form.label :number_of_installments, "Number of Installments" %>
    <%= number_field_tag :number_of_installments, nil, required: true %>
  </div>

  <div>
    <%= form.submit "Create User and Installments" %>
  </div>
<% end %>
